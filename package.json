{
  "name": "clipboard-manager",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.davethetank.typemate",
    "productName": "TypeMate",
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "darkModeSupport": true
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": ["AppImage"]
    }
  }
}
