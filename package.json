{
  "name": "typemate",
  "version": "1.0.1",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "clean": "rimraf dist",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps && @electron/rebuild",
    "rebuild": "@electron/rebuild"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/electron": "^1.6.10",
    "concurrently": "^8.2.2",
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.davethetank.typemate",
    "productName": "TypeMate",
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "index.html",
      "styles.css"
    ]
  }
}
