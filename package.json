{
  "name": "clipboard-manager",
  "version": "1.0.0",
  "description": "A modern clipboard manager for efficient text typing",
  "author": "DaveTheTank",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "clean": "rimraf dist",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "node-key-sender": "^1.0.11",
    "applescript": "^1.0.0",
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.davethetank.typemate",
    "productName": "TypeMate",
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "darkModeSupport": true
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis"]
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "index.html",
      "styles.css",
      "build/icon.ico"
    ],
    "extraResources": [
      {
        "from": "node_modules/node-key-sender/jar",
        "to": "jar",
        "filter": ["*.jar"]
      }
    ]
  }
}
